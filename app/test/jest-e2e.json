{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@libs(|/.*)$": "<rootDir>/libs/$1",
    "^@libs/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
    "^@config(|/.*)$": "<rootDir>/config/$1"
  }
}